<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  document
    .getElementById("payment-form")
    .addEventListener("submit", async function (e) {
      e.preventDefault();

      const res = await fetch("/payment/create-order", { method: "POST" });
      const order = await res.json();

      const options = {
        key: "<%= process.env.RAZORPAY_KEY_ID %>",
        amount: order.amount,
        currency: order.currency,
        name: "Todo App Pro",
        order_id: order.id,
        handler: async function (response) {
          await fetch("/payment/verify", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(response),
          });
          alert("Payment successful! You are now Pro ðŸš€");
          window.location.reload();
        },
      };

      const rzp = new Razorpay(options);
      rzp.open();
    });
</script>


    <!-- Todo List -->
    <ul>
      <% const currentUserEmail = userEmail; todos.forEach(function(todo) { let role = ''; if (todo.owner === currentUserEmail) { role = 'owner'; } else if (todo.sharedWith && todo.sharedWith.length > 0) { for (let i = 0; i < todo.sharedWith.length; i++) { if (todo.sharedWith[i].email === currentUserEmail) { role = todo.sharedWith[i].role; break; } } } %>
      <li>
        <!-- Update Section -->
        <% if (role === 'owner' || role === 'editor') { %>
        <form action="/todos/<%= todo._id %>/update" method="POST">
          <input name="title" value="<%= todo.title %>" required />
          <button type="submit">Update</button>
        </form>
        <% } else { %>
        <p><%= todo.title %></p>
        <% } %>

        <!-- Owner-only Actions -->
        <% if (role === 'owner') { %>
        <!-- Delete -->
        <form action="/todos/<%= todo._id %>/delete" method="POST">
          <button type="submit">Delete</button>
        </form>

        <!-- Share with another user -->
        <form method="POST" action="/share">
          <input type="hidden" name="todoId" value="<%= todo._id %>" />
          <input type="email" name="shareWithEmail" placeholder="Email to share" required />
          <select name="role">
            <option value="viewer">Viewer</option>
            <option value="editor">Editor</option>
          </select>
          <button type="submit">Share</button>
        </form>
        <% } %>

        <!-- Shared Users List -->
        <% if (todo.sharedWith && todo.sharedWith.length > 0) { %>
        <div class="shared-users">
          <strong>Shared With:</strong>
          <ul>
            <% todo.sharedWith.forEach(function(user) { %>
            <li>
              <span><%= user.email %> (<%= user.role %>)</span>

              <% if (role === 'owner') { %>
              <!-- Update role -->
              <form method="POST" action="/share/update-role">
                <input type="hidden" name="todoId" value="<%= todo._id %>" />
                <input type="hidden" name="shareWithEmail" value="<%= user.email %>" />
                <select name="role">
                  <option value="viewer" <%= user.role === 'viewer' ? 'selected' : '' %>>Viewer</option>
                  <option value="editor" <%= user.role === 'editor' ? 'selected' : '' %>>Editor</option>
                </select>
                <button type="submit">Update</button>
              </form>

              <!-- Unshare -->
              <form method="POST" action="/unshare">
                <input type="hidden" name="todoId" value="<%= todo._id %>" />
                <input type="hidden" name="shareWithEmail" value="<%= user.email %>" />
                <button type="submit" class="btn-unshare">Remove</button>
              </form>
              <% } %>
            </li>
            <% }); %>
          </ul>
        </div>
        <% } %>
      </li>
      <% }); %>
    </ul>

    <!-- Share Invite Form -->
    <h2>Invite Someone by Email</h2>
    <form action="/share-invite" method="POST" class="share-invite-form">
      <div class="form-group">
        <label for="name">Name:</label>
        <input id="name" type="text" name="name" required />
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input id="email" type="email" name="email" required />
      </div>
      <button type="submit">Send Invite</button>
    </form>

    <!-- People Table (Registered or Invited) -->
    <h2>People You Invited</h2>
    <ul class="shared-list">
      <% people.forEach(function(person) { %>
      <li><%= person.name %> - <%= person.email %></li>
      <% }); %>
    </ul>

    <!-- Logout -->
    <form method="POST" action="/users/logout">
      <button class="logout-button" type="submit">Logout</button>
    </form>
  </body>
</html>
